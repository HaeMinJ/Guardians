<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_image_view"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:elevation="14dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"/>
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/recycler_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="12호실 1번 홍길동님"
        android:layout_alignStart="@id/home_image_view"
        android:layout_below="@id/home_image_view"
        />
    <LinearLayout
        android:layout_alignBottom="@id/recycler_info_text"
        android:layout_alignEnd="@id/home_image_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위험도"/>
        <TextView
            android:id="@+id/warning_rate"
            android:layout_marginEnd="4dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"/>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="16dp"/>
    </LinearLayout>



</RelativeLayout>
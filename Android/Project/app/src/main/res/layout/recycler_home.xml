<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:elevation="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/recycler_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/home_image_view"
        android:layout_below="@id/home_image_view"
        android:layout_marginTop="12dp"
        android:text="12호실 1번 홍길동님"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recycler_info_text"
        android:layout_alignEnd="@id/home_image_view"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:text="위험도" />

        <TextView
            android:id="@+id/warning_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:text="80%"
            android:textColor="@color/colorAccent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/black"
            android:foreground="@drawable/bg_progress"
            android:progress="30"
            android:progressBackgroundTint="@android:color/white"
            android:progressTint="@color/colorAccent" />

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6f4"
    tools:context=".Activity.PatientModifyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/appbarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <kr.guardians.falldetection.CustomWidget.CustomAppbar
                android:id="@+id/appbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="환자정보 수정"
                app:titleTextColor="@android:color/black"
                app:isSettingVisible="false"
                app:isBackVisible="true"/>

            <Button
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:text="완료"
                android:textSize="16sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="14dp"
            android:layout_below="@id/appbarLayout"
            android:src="@mipmap/ic_launcher"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="환자 사진 바꾸기"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="12dp"/>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_below="@id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/text_group"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="이름"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>


                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="연락처"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>


                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="특수이력"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>


                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="호실"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="호실 내 위치"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="24dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/text_group"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16sp"
                    android:text="정해민"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <EditText
                    android:textSize="16sp"
                    android:text="010-9881-0664"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <EditText
                    android:textSize="16sp"
                    android:text="감기, 치매초기 증상"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <EditText
                    android:textSize="16sp"
                    android:text="101호"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />



            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>